{% extends 'basebackconstat.html.twig' %}
{% block title %}
    <title>Gestion des Constats</title>
{% endblock %}

{% block list %}
    <h1>Constat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ constat.id }}</td>
            </tr>
            <tr>
                <th>Dateaccident</th>
                <td>{{ constat.dateaccident ? constat.dateaccident|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ constat.lieu }}</td>
            </tr>
            <tr>
                <th>Dateconstat</th>
                <td>{{ constat.dateconstat ? constat.dateconstat|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Imageaccident</th>
                <td>{{ constat.imageaccident }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ constat.etat }}</td>
            </tr>
            <tr>
                <th>Nomclient</th>
                <td>{{ constat.nomclient }}</td>
            </tr>
            <tr>
                <th>Prenomclient</th>
                <td>{{ constat.prenomclient }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ constat.email }}</td>
            </tr>
            <tr>
                <th>Numerodetelephone</th>
                <td>{{ constat.numerodetelephone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_constat_index') }}">Retour</a>

    <a href="{{ path('app_constat_edit', {'id': constat.id}) }}">Modifier</a>

    {{ include('constat/_delete_form.html.twig') }}
{% endblock %}
