{% extends 'basefrontconstat.html.twig' %}

{% block title %}Vehicule index{% endblock %}

{% block body %}
    <h1>Vehicule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Num_contrat</th>
                <th>Nomagence</th>
                <th>Nomconducteur</th>
                <th>Prenomconducteur</th>
                <th>Adresse</th>
                <th>Immatriculation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td>{{ vehicule.id }}</td>
                <td>{{ vehicule.numContrat }}</td>
                <td>{{ vehicule.nomagence }}</td>
                <td>{{ vehicule.nomconducteur }}</td>
                <td>{{ vehicule.prenomconducteur }}</td>
                <td>{{ vehicule.adresse }}</td>
                <td>{{ vehicule.immatriculation }}</td>
                <td>
                    <a href="{{ path('app_vehicule_show', {'id': vehicule.id}) }}">show</a>
                    <a href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vehicule_new') }}">Create new</a>
{% endblock %}
